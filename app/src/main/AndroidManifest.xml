<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miguel.jonatas.tovcam">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName=".LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.miguel.jonatas.tovcam.LoginActivity" />
        </activity>
        <activity
            android:name=".QRActivity"
            android:label="QRActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.miguel.jonatas.tovcam.MainActivity" />
        </activity>
        <activity
            android:name=".QuestaoActivity"
            android:label="@string/title_activity_questao"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.miguel.jonatas.tovcam.MainActivity" />
        </activity>
        <activity
            android:name=".MenuAdminActivity"
            android:label="@string/title_activity_menu_admin"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.miguel.jonatas.tovcam.LoginActivity" />
        </activity>
        <activity
            android:name=".NovoFuncionarioActivity"
            android:label="@string/title_activity_novo_funcionario"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NovaEmpresa"
            android:label="@string/title_activity_nova_empresa"
            android:parentActivityName=".MenuAdminActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.miguel.jonatas.tovcam.MenuAdminActivity" />
        </activity>
        <activity
            android:name=".CriarQuestaoActivity"
            android:label="@string/title_activity_criar_questao"
            android:parentActivityName=".MenuAdminActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.miguel.jonatas.tovcam.MenuAdminActivity" />
        </activity>
        <activity
            android:name=".NovoTreinamentoActivity"
            android:label="@string/title_activity_novo_treinamento"
            android:parentActivityName=".MenuAdminActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.miguel.jonatas.tovcam.MenuAdminActivity" />
        </activity>
        <activity
            android:name=".SelecionarEmpresasActivity"
            android:label="@string/title_activity_selecionar_empresas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SelecionarQuestoesActivity"
            android:label="@string/title_activity_selecionar_questoes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RankingActivity"
            android:label="@string/title_activity_ranking"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.miguel.jonatas.tovcam.MainActivity" />
        </activity>
        <activity
            android:name=".TreinamentosCompletosActivity"
            android:label="@string/title_activity_treinamentos_completos"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".PICPerfilActivity"
            android:label="@string/title_activity_picperfil"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.miguel.jonatas.tovcam.MainActivity" />
        </activity>
        <activity
            android:name=".PerguntaActivity"
            android:label="@string/title_activity_pergunta"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".PerguntaMEActivity"
            android:label="@string/title_activity_pergunta_me"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.miguel.jonatas.tovcam.MainActivity" />
        </activity>
    </application>

</manifest>